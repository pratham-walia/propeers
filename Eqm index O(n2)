#include <bits/stdc++.h> 
int findEquilibriumIndex(vector<int> &arr) {
    int left,right;
    for(int i=0;i<arr.size();i++){
        left=0,right=0;
        for(int j=0;j<i;j++){
            left+=arr[j];
        }
        for(int j=arr.size()-1;j>i;j--){
            right+=arr[j];
        }
        if(left==right){
            return i; 
        }
    }
    return -1;
}
